{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "esnext"
        ],
        "target": "ES2020",
        "strict": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "inlineSourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
