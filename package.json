{
    "name": "galactica-bot",
    "version": "2.0.1",
    "description": "Personal Discord Bot",
    "license": "MIT",
    "repository": "",
    "author": "Scott Fasone<scott181182@yahoo.com>",
    "contributors": [
        "Scott Fasone",
        "Nolan Rosen"
    ],
    "keywords": [],
    "files": [
        "lib"
    ],
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "scripts": {
        "clean": "rimraf lib && rimraf coverage",
        "format": "prettier --write \"{src,test}/**/*.ts\" --single-quote --trailing-comma es5",
        "lint": "tslint -t verbose --force \"src/**/*.ts\"",
        "prepublishOnly": "npm run build",
        "prebuild": "npm run clean && echo Using TypeScript && tsc --version",
        "build": "npm run lint && tsc --pretty",
        "watch": "npm run build -- --watch",
        "test": "jest",
        "start": "npm run build && node ."
    },
    "dependencies": {
        "botiful": "git://github.com/scott181182/botiful.git",
        "discord.js": "^11.4.2",
        "ytdl-core": "^0.28.3"
    },
    "devDependencies": {
        "@types/jest": "^23.1.2",
        "@types/node": "^10.3.6",
        "coveralls": "^2.0.0",
        "jest": "^23.2.0",
        "prettier": "^1.5.2",
        "rimraf": "^2.0.0",
        "ts-jest": "^22.4.6",
        "ts-node": "^7.0.0",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "^2.9.2"
    },
    "engines": {
        "node": ">=6.0.0"
    },
    "jest": {
        "transform": {
            ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "modulePaths": [
            "<rootDir>/lib",
            "<rootDir>/node_modules/@types"
        ],
        "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "testEnvironment": "node"
    }
}
